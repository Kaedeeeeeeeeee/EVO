using System.Collections;
using UnityEngine;
using UnityEngine.AI;
using System;

[RequireComponent(typeof(NavMeshAgent))]
[RequireComponent(typeof(EnemyHealth))]
public class EnemyAIExtended : MonoBehaviour
{
    // æ•Œäººå±æ€§
    public int level = 1;                    // æ•Œäººç­‰çº§
    public float walkSpeed = 2f;             // è¡Œèµ°é€Ÿåº¦
    public float runSpeed = 5f;              // å¥”è·‘é€Ÿåº¦
    public float visionRange = 10f;          // è§†é‡èŒƒå›´
    public float attackRange = 2f;           // æ”»å‡»èŒƒå›´
    public int attackDamage = 10;            // æ”»å‡»ä¼¤å®³
    public float attackCooldown = 1f;        // æ”»å‡»å†·å´æ—¶é—´
    public float huntThreshold = 30f;        // çŒæ€é˜ˆå€¼ï¼ˆé¥¥é¥¿ç™¾åˆ†æ¯”ï¼‰

    // è¡Œä¸ºå‚æ•°
    public float wanderRadius = 10f;         // æ¸¸è¡åŠå¾„
    public float wanderInterval = 5f;        // æ¸¸è¡é—´éš”æ—¶é—´
    public float alertDuration = 3f;         // è­¦è§‰æŒç»­æ—¶é—´
    public float eatingDuration = 5f;        // è¿›é£ŸæŒç»­æ—¶é—´
    public float hungerDecreaseRate = 0.1f;  // é¥¥é¥¿å€¼é™ä½é€Ÿç‡ï¼ˆæ¯ç§’ï¼‰
    
    // ä½“åŠ›ç³»ç»Ÿå‚æ•°
    [Header("ä½“åŠ›ç³»ç»Ÿ")]
    public float maxStamina = 15f;           // æœ€å¤§ä½“åŠ›å€¼
    public float currentStamina;             // å½“å‰ä½“åŠ›å€¼
    public float restTime = 5f;              // ä¼‘æ¯æ—¶é—´ï¼ˆç§’ï¼‰
    public bool isResting = false;           // æ˜¯å¦æ­£åœ¨ä¼‘æ¯
    public float staminaDecreaseRate = 2.0f; // ä½“åŠ›æ¶ˆè€—é€Ÿç‡ï¼ˆæ¯ç§’ï¼‰
    public float staminaRecoveryRate = 1.0f; // ä½“åŠ›æ¢å¤é€Ÿç‡ï¼ˆæ¯ç§’ï¼‰
    
    // ä½“åŠ›é˜ˆå€¼
    [Range(0.1f, 0.9f)]
    public float lowStaminaThreshold = 0.2f;  // ä½ä½“åŠ›é˜ˆå€¼ï¼ˆç™¾åˆ†æ¯”ï¼‰
    [Range(0.1f, 0.9f)]
    public float highStaminaThreshold = 0.5f; // é«˜ä½“åŠ›é˜ˆå€¼ï¼ˆç™¾åˆ†æ¯”ï¼‰
    
    // æ–°å¢ï¼šç‰©ç†ç¢°æ’å‚æ•°
    public float collisionCheckRadius = 1.0f;  // ç¢°æ’æ£€æµ‹åŠå¾„
    public float pushForce = 5.0f;            // æ¨åŠ›å¤§å°
    public LayerMask terrainLayerMask;        // åœ°å½¢å±‚é®ç½©
    public bool useRigidbody = true;          // æ˜¯å¦ä½¿ç”¨åˆšä½“è¿›è¡Œç‰©ç†äº¤äº’

    // ç»„ä»¶å¼•ç”¨
    private NavMeshAgent agent;
    private EnemyHealth health;
    private Transform target;                // å½“å‰ç›®æ ‡ï¼ˆå¯ä»¥æ˜¯ç©å®¶æˆ–å…¶ä»–æ•Œäººï¼‰
    private Transform startPosition;          // åˆå§‹ä½ç½®
    private Vector3 wanderDestination;       // æ¸¸è¡ç›®çš„åœ°
    private Rigidbody rb;                    // æ–°å¢ï¼šåˆšä½“ç»„ä»¶
    private CapsuleCollider capsuleCollider;  // æ–°å¢ï¼šç¢°æ’ä½“å¼•ç”¨

    // å†…éƒ¨çŠ¶æ€
    private EnemyState currentState = EnemyState.Idle;
    private float currentHunger = 100f;      // å½“å‰é¥¥é¥¿å€¼ï¼ˆ100æ»¡ï¼Œ0é¥¿ï¼‰
    private bool canAttack = true;
    private float lastStateChangeTime;
    private int playerLevel = 1;             // ç©å®¶ç­‰çº§ï¼ˆéœ€ä»ç©å®¶å¤„è·å–ï¼‰

    // è°ƒè¯•å¯è§†åŒ–
    public bool showVisionRange = true;
    public bool showAttackRange = true;

    private Transform currentEatingTarget; // æ–°å¢ï¼šå½“å‰æ­£åœ¨è¿›é£Ÿçš„ç›®æ ‡

    // æ–°å¢ï¼šå¤„ç†æ–œå¡å’Œéšœç¢ç‰©çš„æ–¹æ³•
    private void OnCollisionStay(Collision collision)
    {
        // å¤„ç†ä¸åœ°å½¢çš„æŒç»­ç¢°æ’
        TerrainIdentifier terrain = collision.gameObject.GetComponent<TerrainIdentifier>();
        if (terrain != null)
        {
            // è®¡ç®—ç¢°æ’ç‚¹çš„å¹³å‡æ³•çº¿
            Vector3 avgNormal = Vector3.zero;
            int contactCount = collision.contactCount;
            
            for (int i = 0; i < contactCount; i++)
            {
                avgNormal += collision.GetContact(i).normal;
            }
            
            if (contactCount > 0)
            {
                avgNormal /= contactCount;
                float angle = Vector3.Angle(avgNormal, Vector3.up);
                
                // æ£€æŸ¥æ˜¯å¦åœ¨é™¡å³­è¡¨é¢ä¸Š
                if (angle > 45f)
                {
                    // è·å–æ°´å¹³ç§»åŠ¨æ–¹å‘ï¼ˆè¿œç¦»æ–œå¡ï¼‰
                    Vector3 horizontalNormal = avgNormal;
                    horizontalNormal.y = 0;
                    horizontalNormal.Normalize();
                    
                    // åœæ­¢å½“å‰è·¯å¾„
                    if (IsAgentValid())
                    {
                        // å°è¯•æ‰¾åˆ°æ–°è·¯å¾„
                        Vector3 avoidDirection = horizontalNormal;
                        
                        // ç¨å¾®æŠ¬é«˜èµ·ç‚¹ä»¥é¿å¼€ä½éšœç¢ç‰©
                        Vector3 startPos = transform.position + Vector3.up * 0.5f;
                        Vector3 targetPos = startPos + avoidDirection * 5f;
                        
                        // å¯»æ‰¾å¯è¡Œçš„å¯¼èˆªç‚¹
                        NavMeshHit navHit;
                        if (NavMesh.SamplePosition(targetPos, out navHit, 5f, NavMesh.AllAreas))
                        {
                            // è®¾ç½®æ–°ç›®æ ‡
                            agent.SetDestination(navHit.position);
                            
                            // è°ƒæ•´ä¸ºæ…¢é€Ÿç§»åŠ¨ï¼Œæé«˜ç¨³å®šæ€§
                            agent.speed = walkSpeed * 0.8f;
                            
                            // å‘ä¸Šæ¨ä¸€ç‚¹ä»¥é˜²æ­¢å¡ä½
                            if (agent.isOnOffMeshLink)
                            {
                                transform.position += Vector3.up * 0.2f;
                            }
                            
                            Debug.Log($"æ•Œäººé‡åˆ°åœ°å½¢{terrain.terrainType}çš„é™¡å³­è¡¨é¢ï¼Œå¯»æ‰¾æ–°è·¯å¾„ã€‚è§’åº¦:{angle:F1}Â°");
                        }
                    }
                }
            }
        }
    }
    
    // æ–°å¢ï¼šå¤„ç†é™·å…¥æˆ–å¡ä½çš„ç›‘æµ‹
    private Vector3 lastPosition;
    private float stuckCheckInterval = 1.0f;
    private float lastStuckCheckTime;
    private int stuckCounter = 0;
    
    private void Update()
    {
        // æ£€æµ‹æ˜¯å¦å¡ä½
        if (Time.time > lastStuckCheckTime + stuckCheckInterval)
        {
            // åªåœ¨ä¸»åŠ¨ç§»åŠ¨çŠ¶æ€ä¸‹æ£€æµ‹
            if (IsAgentValid() && !agent.isStopped && agent.hasPath)
            {
                float distanceMoved = Vector3.Distance(transform.position, lastPosition);
                
                // å¦‚æœå‡ ä¹æ²¡æœ‰ç§»åŠ¨ï¼Œå¯èƒ½æ˜¯å¡ä½äº†
                if (distanceMoved < 0.1f)
                {
                    stuckCounter++;
                    
                    // è¿ç»­å¤šæ¬¡æ£€æµ‹éƒ½æ²¡ç§»åŠ¨ï¼Œé‡‡å–æªæ–½
                    if (stuckCounter >= 3)
                    {
                        UnstuckAgent();
                        stuckCounter = 0;
                    }
                }
                else
                {
                    stuckCounter = 0;
                }
            }
            
            lastPosition = transform.position;
            lastStuckCheckTime = Time.time;
        }
    }
    
    // å°è¯•è§£é™¤å¡ä½çŠ¶æ€
    private void UnstuckAgent()
    {
        if (!IsAgentValid())
            return;
        
        // ä¸´æ—¶æé«˜é«˜åº¦å°è¯•è§£è„±
        transform.position += Vector3.up * 0.5f;
        
        // é‡æ–°è®¡ç®—è·¯å¾„
        NavMeshPath path = new NavMeshPath();
        Vector3 randomDirection = UnityEngine.Random.insideUnitSphere;
        randomDirection.y = 0;
        randomDirection.Normalize();
        
        Vector3 targetPosition = transform.position + randomDirection * 5f;
        NavMeshHit hit;
        
        if (NavMesh.SamplePosition(targetPosition, out hit, 5f, NavMesh.AllAreas))
        {
            agent.SetDestination(hit.position);
            Debug.Log("æ•Œäººå¡ä½ï¼Œå°è¯•é‡æ–°å¯»è·¯");
        }
        
        // é‡ç½®å¯¼èˆªä»£ç†
        agent.ResetPath();
        agent.velocity = Vector3.zero;
        
        // å¦‚æœå½“å‰åœ¨è¿½å‡»çŠ¶æ€ä½†å¡ä½äº†ï¼Œå¯ä»¥è€ƒè™‘åˆ‡æ¢åˆ°æ¸¸è¡çŠ¶æ€
        if (currentState == EnemyState.Hunting)
        {
            TransitionToState(EnemyState.Wandering);
        }
        
        // ç¡®ä¿NavMeshä»£ç†è®¾ç½®æ­£ç¡®
        EnsureAgentOnNavMesh();
    }
    
    void Awake()
    {
        // åˆå§‹åŒ–å¡ä½æ£€æµ‹
        lastPosition = transform.position;
        lastStuckCheckTime = Time.time;
    }

    void Start()
    {
        agent = GetComponent<NavMeshAgent>();
        health = GetComponent<EnemyHealth>();
        
        // è®¾ç½®åˆå§‹ä½ç½®
        startPosition = transform;
        wanderDestination = transform.position;
        
        // åˆå§‹åŒ–çŠ¶æ€å’Œæ—¶é—´
        lastStateChangeTime = Time.time;
        
        // è®¾ç½®æ ¹æ®ç­‰çº§çš„å±æ€§
        AdjustStatsByLevel();
        
        // æ–°å¢ï¼šåˆå§‹åŒ–ç‰©ç†ç»„ä»¶
        InitializePhysicsComponents();
        
        // å¯åŠ¨è¡Œä¸ºåç¨‹
        StartCoroutine(UpdateBehavior());
        StartCoroutine(DecreaseHunger());
        StartCoroutine(MonitorStuckStatus());
        
        // å¯åŠ¨éšœç¢ç‰©æ£€æµ‹åç¨‹
        StartCoroutine(ObstacleDetection());
        
        // æ–°å¢ï¼šå¯åŠ¨è¿ç»­ç¢°æ’æ£€æµ‹åç¨‹
        StartCoroutine(ContinuousCollisionDetection());

        // éšæœºåˆå§‹é¥¥é¥¿å€¼ï¼ˆ60-100ï¼‰
        currentHunger = UnityEngine.Random.Range(60f, 100f);

        // åˆå§‹çŠ¶æ€ä¸ºæ¸¸è¡
        TransitionToState(EnemyState.Wandering);
    }

    // æ–°å¢ï¼šåˆå§‹åŒ–ç‰©ç†ç»„ä»¶
    private void InitializePhysicsComponents()
    {
        // æ£€æŸ¥å’Œè®¾ç½®åˆšä½“
        rb = GetComponent<Rigidbody>();
        if (rb == null && useRigidbody)
        {
            rb = gameObject.AddComponent<Rigidbody>();
            rb.mass = 10f;
            rb.drag = 3f;
            rb.angularDrag = 5f;
            rb.useGravity = true;
            rb.isKinematic = false;
            rb.interpolation = RigidbodyInterpolation.Interpolate;
            rb.collisionDetectionMode = CollisionDetectionMode.Continuous;
            rb.constraints = RigidbodyConstraints.FreezeRotation; // é˜²æ­¢æ•Œäººç¿»å€’
        }
        else if (rb != null && useRigidbody)
        {
            // ç¡®ä¿å·²æœ‰åˆšä½“è®¾ç½®æ­£ç¡®
            rb.isKinematic = false;
            rb.collisionDetectionMode = CollisionDetectionMode.Continuous;
            rb.constraints = RigidbodyConstraints.FreezeRotation;
        }
        
        // æ£€æŸ¥å’Œè®¾ç½®ç¢°æ’ä½“
        capsuleCollider = GetComponent<CapsuleCollider>();
        if (capsuleCollider == null)
        {
            capsuleCollider = gameObject.AddComponent<CapsuleCollider>();
            capsuleCollider.center = new Vector3(0, 1f, 0);
            capsuleCollider.radius = 0.5f;
            capsuleCollider.height = 2f;
            capsuleCollider.material = CreatePhysicsMaterial();
        }
        else
        {
            // ç¡®ä¿ç¢°æ’ä½“è®¾ç½®æ­£ç¡®
            if (capsuleCollider.material == null)
            {
                capsuleCollider.material = CreatePhysicsMaterial();
            }
        }
        
        // ç¡®ä¿åœ¨æ­£ç¡®çš„å±‚
        gameObject.layer = LayerMask.NameToLayer("Enemy");
        
        // è®¾ç½®åœ°å½¢å±‚é®ç½©
        terrainLayerMask = LayerMask.GetMask("Default");
    }
    
    // åˆ›å»ºç‰©ç†æè´¨
    private PhysicMaterial CreatePhysicsMaterial()
    {
        PhysicMaterial material = new PhysicMaterial("EnemyPhysicsMaterial");
        material.dynamicFriction = 0.6f;
        material.staticFriction = 0.6f;
        material.bounciness = 0.1f;
        material.frictionCombine = PhysicMaterialCombine.Average;
        material.bounceCombine = PhysicMaterialCombine.Average;
        return material;
    }

    // æ–°å¢ï¼šè¿ç»­ç¢°æ’æ£€æµ‹åç¨‹
    IEnumerator ContinuousCollisionDetection()
    {
        while (true)
        {
            // ä½¿ç”¨çƒå½¢æŠ•å°„æ£€æµ‹å‘¨å›´ç‰©ä½“
            Collider[] hitColliders = Physics.OverlapSphere(transform.position, collisionCheckRadius, terrainLayerMask);
            
            foreach (var hitCollider in hitColliders)
            {
                // æ’é™¤è‡ªèº«å’Œå…¶ä»–æ•Œäºº
                if (hitCollider.gameObject == gameObject || hitCollider.CompareTag("Enemy") || hitCollider.CompareTag("Player"))
                    continue;
                
                // æ£€æŸ¥æ˜¯å¦æ˜¯åœ°å½¢
                TerrainIdentifier terrain = hitCollider.GetComponent<TerrainIdentifier>();
                if (terrain != null)
                {
                    // è®¡ç®—ä»åœ°å½¢åˆ°æ•Œäººçš„æ–¹å‘
                    Vector3 direction = transform.position - hitCollider.ClosestPoint(transform.position);
                    direction.y = 0; // ä¿æŒæ°´å¹³æ–¹å‘
                    
                    // å¦‚æœæ–¹å‘ä¸ºé›¶ï¼Œç»™ä¸€ä¸ªéšæœºæ–¹å‘
                    if (direction.magnitude < 0.1f)
                    {
                        direction = new Vector3(UnityEngine.Random.Range(-1f, 1f), 0, UnityEngine.Random.Range(-1f, 1f)).normalized;
                    }
                    
                    // åº”ç”¨æ¨åŠ›è¿œç¦»åœ°å½¢
                    ApplyPushForce(direction.normalized * pushForce);
                    
                    // æš‚æ—¶åœæ­¢å¯¼èˆªä»£ç†
                    StopAgentTemporarily(0.5f);
                    
                    Debug.Log($"æ•Œäººä¸åœ°å½¢ {terrain.terrainType} å‘ç”Ÿç¢°æ’ï¼Œåº”ç”¨æ¨åŠ›");
                }
            }
            
            yield return new WaitForSeconds(0.1f); // æ¯0.1ç§’æ£€æµ‹ä¸€æ¬¡
        }
    }
    
    // åº”ç”¨æ¨åŠ›
    private void ApplyPushForce(Vector3 force)
    {
        // ä½¿ç”¨åˆšä½“æ–½åŠ åŠ›
        if (rb != null && !rb.isKinematic)
        {
            rb.AddForce(force, ForceMode.Impulse);
        }
        else
        {
            // å¦‚æœæ²¡æœ‰åˆšä½“ï¼Œç›´æ¥ç§»åŠ¨ä½ç½®
            transform.position += force * Time.deltaTime;
        }
    }
    
    // ä¸´æ—¶åœæ­¢å¯¼èˆªä»£ç†
    private IEnumerator StopAgentTemporarily(float duration)
    {
        if (IsAgentValid())
        {
            // ä¿å­˜å½“å‰ç›®æ ‡
            Vector3 currentTarget = agent.destination;
            
            // åœæ­¢ä»£ç†
            agent.isStopped = true;
            agent.velocity = Vector3.zero;
            
            // ç­‰å¾…æŒ‡å®šæ—¶é—´
            yield return new WaitForSeconds(duration);
            
            // é‡æ–°å¯ç”¨ä»£ç†å¹¶æ¢å¤è·¯å¾„
            if (IsAgentValid())
            {
                agent.isStopped = false;
                agent.SetDestination(currentTarget);
            }
        }
    }
    
    // å¢å¼ºç‰ˆç¢°æ’å“åº”æ–¹æ³•
    void OnCollisionEnter(Collision collision)
    {
        HandleCollision(collision);
    }
    
    private void HandleCollision(Collision collision)
    {
        // å¿½ç•¥ä¸ç©å®¶å’Œå…¶ä»–æ•Œäººçš„ç¢°æ’
        if (collision.gameObject.CompareTag("Player") || collision.gameObject.CompareTag("Enemy"))
            return;
        
        // æ£€æŸ¥æ˜¯å¦ä¸åœ°å½¢ç¢°æ’
        TerrainIdentifier terrain = collision.gameObject.GetComponent<TerrainIdentifier>();
        if (terrain != null)
        {
            // è®¡ç®—ç¢°æ’ç‚¹çš„å¹³å‡æ³•çº¿
            Vector3 avgNormal = Vector3.zero;
            int contactCount = collision.contactCount;
            
            for (int i = 0; i < contactCount; i++)
            {
                avgNormal += collision.GetContact(i).normal;
            }
            
            if (contactCount > 0)
            {
                avgNormal /= contactCount;
                float angle = Vector3.Angle(avgNormal, Vector3.up);
                
                // æ£€æŸ¥æ˜¯å¦åœ¨é™¡å³­è¡¨é¢ä¸Š
                const float maxAllowedSlope = 45f;
                if (angle > maxAllowedSlope)
                {
                    // è·å–ç¢°æ’ç‚¹
                    ContactPoint contact = collision.GetContact(0);
                    Vector3 point = contact.point;
                    
                    // è®¡ç®—æ¨åŠ›æ–¹å‘ï¼ˆæ²¿ç€æ³•çº¿ä½†ä¿æŒæ°´å¹³æ–¹å‘ï¼‰
                    Vector3 pushDirection = avgNormal;
                    pushDirection.y = 0;
                    pushDirection.Normalize();
                    
                    // å¦‚æœæ–¹å‘ä¸ºé›¶ï¼Œç»™ä¸€ä¸ªåŸºäºå½“å‰ä½ç½®å’Œç¢°æ’ç‚¹çš„æ–¹å‘
                    if (pushDirection.magnitude < 0.1f)
                    {
                        pushDirection = transform.position - point;
                        pushDirection.y = 0;
                        pushDirection.Normalize();
                    }
                    
                    // åº”ç”¨æ¨åŠ›
                    ApplyPushForce(pushDirection * pushForce);
                    
                    // é‡æ–°è®¡ç®—è·¯å¾„
                    StartCoroutine(RecalculatePath());
                    
                    Debug.Log($"æ•Œäººä¸é™¡å³­åœ°å½¢ç¢°æ’ï¼Œè§’åº¦: {angle}ï¼Œåº”ç”¨æ¨åŠ›");
                }
            }
        }
        else
        {
            // å¤„ç†ä¸å…¶ä»–ç‰©ä½“çš„ç¢°æ’
            // è¿™é‡Œå¯ä»¥æ·»åŠ é’ˆå¯¹ç‰¹å®šç‰©ä½“ç±»å‹çš„å¤„ç†é€»è¾‘
        }
    }
    
    // é‡æ–°è®¡ç®—è·¯å¾„
    private IEnumerator RecalculatePath()
    {
        // ç­‰å¾…çŸ­æš‚æ—¶é—´ç¡®ä¿æ•Œäººå·²è¢«æ¨å¼€
        yield return new WaitForSeconds(0.3f);
        
        if (IsAgentValid() && agent.destination != Vector3.zero)
        {
            // ä¿å­˜å½“å‰ç›®æ ‡
            Vector3 currentDestination = agent.destination;
            
            // é‡ç½®å¹¶é‡æ–°è®¡ç®—è·¯å¾„
            agent.ResetPath();
            yield return new WaitForSeconds(0.1f);
            
            // å°è¯•æ‰¾åˆ°é€šå‘ç›®æ ‡çš„æ–°è·¯å¾„
            NavMeshPath path = new NavMeshPath();
            if (agent.CalculatePath(currentDestination, path))
            {
                if (path.status == NavMeshPathStatus.PathComplete)
                {
                    agent.SetDestination(currentDestination);
                }
                else
                {
                    // å¦‚æœæ— æ³•å®Œæˆè·¯å¾„ï¼Œå¯»æ‰¾é™„è¿‘æ›¿ä»£ç‚¹
                    NavMeshHit hit;
                    if (NavMesh.SamplePosition(transform.position + (currentDestination - transform.position).normalized * 5f,
                        out hit, 5f, NavMesh.AllAreas))
                    {
                        agent.SetDestination(hit.position);
                    }
                    else
                    {
                        // å¦‚æœæ‰¾ä¸åˆ°åˆé€‚çš„ç‚¹ï¼Œè®¾ç½®æ¸¸è¡çŠ¶æ€
                        TransitionToState(EnemyState.Wandering);
                    }
                }
            }
        }
    }

    // ç¡®ä¿Agentåœ¨æœ‰æ•ˆçš„NavMeshä¸Š
    private void EnsureAgentOnNavMesh()
    {
        if (agent == null) return;
        
        // æ£€æŸ¥å½“å‰ä½ç½®æ˜¯å¦åœ¨NavMeshä¸Š
        NavMeshHit hit;
        if (!NavMesh.SamplePosition(transform.position, out hit, 5f, NavMesh.AllAreas))
        {
            // å¦‚æœä¸åœ¨NavMeshä¸Šï¼Œå¯»æ‰¾æœ€è¿‘çš„NavMeshç‚¹
            if (NavMesh.SamplePosition(transform.position, out hit, 50f, NavMesh.AllAreas))
            {
                // å°†ç‰©ä½“ç§»åŠ¨åˆ°æœ€è¿‘çš„NavMeshç‚¹
                transform.position = hit.position;
                Debug.Log($"å·²å°†æ•Œäººç§»åŠ¨åˆ°æœ€è¿‘çš„NavMeshç‚¹: {hit.position}");
            }
            else
            {
                Debug.LogWarning($"è­¦å‘Š: æ•Œäºº {gameObject.name} ä¸åœ¨NavMeshä¸Šä¸”æ— æ³•æ‰¾åˆ°é™„è¿‘çš„NavMesh!");
            }
        }
        
        // ç¡®ä¿NavMeshä»£ç†å·²å‡†å¤‡å°±ç»ª
        if (agent != null)
        {
            agent.Warp(transform.position);
        }
    }
    
    // æ£€æŸ¥NavMeshAgentæ˜¯å¦æœ‰æ•ˆ
    private bool IsAgentValid()
    {
        return agent != null && agent.isActiveAndEnabled && agent.isOnNavMesh;
    }

    public void InitializeEnemy()
    {
        // åœ¨EnemySpawnerä¸­è°ƒç”¨ï¼Œç¡®ä¿æ‰€æœ‰å‚æ•°è®¾ç½®æ­£ç¡®
        if (agent == null)
        {
            agent = GetComponent<NavMeshAgent>();
        }

        // è®¾ç½®åŸºæœ¬å¯¼èˆªå‚æ•°
        agent.speed = walkSpeed;
        agent.stoppingDistance = attackRange * 0.8f;
        
        // è®¾ç½®é¿éšœå‚æ•°
        agent.radius = 0.5f;
        agent.height = 2f;
        agent.baseOffset = 0f;
        agent.obstacleAvoidanceType = ObstacleAvoidanceType.HighQualityObstacleAvoidance;
        agent.avoidancePriority = 50;
        agent.autoTraverseOffMeshLink = true;
        
        // æ–°å¢ï¼šè®¾ç½®è¿›é˜¶å¯¼èˆªå‚æ•°
        agent.acceleration = 12f; // åŠ é€Ÿåº¦
        agent.angularSpeed = 360f; // è½¬å‘é€Ÿåº¦
        agent.areaMask = NavMesh.AllAreas; // å¯è¡Œèµ°åŒºåŸŸ
        
        // åˆå§‹åŒ–ä½“åŠ›ç³»ç»Ÿ
        currentStamina = maxStamina;
        isResting = false;
        
        // è®¾ç½®ä½“åŠ›æ¶ˆè€—å€æ•°ï¼ˆæ ¹æ®ç­‰çº§è°ƒæ•´ï¼‰
        staminaDecreaseRate = 2.0f + (level - 1) * 0.2f; // ç­‰çº§è¶Šé«˜ï¼Œä½“åŠ›æ¶ˆè€—è¶Šå¿«
        
        // è®°å½•åˆå§‹åŒ–ä¿¡æ¯
        Debug.Log($"ğŸ”‹ æ•ŒäººLv{level}åˆå§‹åŒ–ä½“åŠ›ç³»ç»Ÿï¼šæœ€å¤§ä½“åŠ›={maxStamina}ç§’ï¼Œä¼‘æ¯æ—¶é—´={restTime}ç§’ï¼Œæ¶ˆè€—é€Ÿç‡={staminaDecreaseRate:F1}");
        
        // æ–°å¢ï¼šåˆå§‹åŒ–ç‰©ç†ç»„ä»¶
        InitializePhysicsComponents();
    }

    IEnumerator UpdateBehavior()
    {
        while (true)
        {
            // æŸ¥æ‰¾ç©å®¶
            if (target == null || (target.CompareTag("Player") && !target.gameObject.activeInHierarchy))
            {
                target = GameObject.FindGameObjectWithTag("Player")?.transform;
                if (target != null)
                {
                    // è·å–ç©å®¶ç­‰çº§
                    PlayerEvolution playerEvolution = target.GetComponent<PlayerEvolution>();
                    if (playerEvolution != null)
                    {
                        // è¿™é‡Œå‡è®¾PlayerEvolutionæœ‰ä¸€ä¸ªå…¬å¼€çš„levelå˜é‡
                        // éœ€è¦ä¿®æ”¹PlayerEvolutionè„šæœ¬æ·»åŠ æ­¤å˜é‡
                        playerLevel = playerEvolution.level;
                    }
                }
            }

            // é¦–å…ˆç›‘æ§ä½“åŠ›çŠ¶æ€ - ç¡®ä¿è¿™åœ¨ä»»ä½•çŠ¶æ€å¤„ç†ä¹‹å‰
            MonitorStamina();

            // æ ¹æ®å½“å‰çŠ¶æ€æ‰§è¡Œè¡Œä¸º
            switch (currentState)
            {
                case EnemyState.Idle:
                    HandleIdleState();
                    break;

                case EnemyState.Wandering:
                    HandleWanderingState();
                    break;

                case EnemyState.Alert:
                    HandleAlertState();
                    break;

                case EnemyState.Hunting:
                    HandleHuntingState();
                    break;

                case EnemyState.Attacking:
                    HandleAttackingState();
                    break;

                case EnemyState.Fleeing:
                    HandleFleeingState();
                    break;

                case EnemyState.Eating:
                    HandleEatingState();
                    break;
                    
                case EnemyState.Resting:
                    HandleRestingState();
                    break;
            }
            
            // å†æ¬¡æ£€æŸ¥ä½“åŠ›ï¼Œç¡®ä¿åœ¨æ¯æ¬¡çŠ¶æ€å¤„ç†åé€Ÿåº¦è®¾ç½®æ­£ç¡®
            EnforceStaminaRestrictions();
            
            // å¢åŠ ï¼šæ¯5ç§’è¾“å‡ºä¸€æ¬¡å½“å‰çŠ¶æ€æ±‡æ€»
            if (Time.frameCount % 300 == 0)
            {
                // è®¡ç®—ä½“åŠ›ç™¾åˆ†æ¯”
                float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina) : 0;
                
                Debug.Log($"ğŸ“Š æ•ŒäººLv{level}çŠ¶æ€æ±‡æ€» - " +
                          $"çŠ¶æ€:{currentState}, " +
                          $"ä½“åŠ›:{currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%), " +
                          $"ä¼‘æ¯:{isResting}, " +
                          $"è®¾å®šé€Ÿåº¦:{agent.speed:F1}, " +
                          $"å®é™…é€Ÿåº¦:{agent.velocity.magnitude:F1}");
            }
            
            // æ¯”ä¹‹å‰æ›´é¢‘ç¹åœ°æ›´æ–°
            yield return new WaitForSeconds(0.1f);
        }
    }

    IEnumerator DecreaseHunger()
    {
        while (true)
        {
            // éšç€æ—¶é—´å‡å°‘é¥¥é¥¿å€¼
            currentHunger = Mathf.Max(0f, currentHunger - hungerDecreaseRate);

            // æ›´æ–°åç§°ä»¥æ˜¾ç¤ºçŠ¶æ€ï¼ˆä¾¿äºè°ƒè¯•ï¼‰
            UpdateNameWithStatus();

            yield return new WaitForSeconds(1f);
        }
    }

    void UpdateNameWithStatus()
    {
        HungerStatus hungerStatus = GetHungerStatus();
        string statusText = currentState.ToString();

        // æ·»åŠ é¥¥é¥¿çŠ¶æ€
        switch (hungerStatus)
        {
            case HungerStatus.Satiated:
                statusText += " (é¥±é£Ÿ)";
                break;
            case HungerStatus.Normal:
                statusText += " (æ­£å¸¸)";
                break;
            case HungerStatus.Hungry:
                statusText += " (é¥¥é¥¿)";
                break;
            case HungerStatus.Starving:
                statusText += " (é¥¥é¥¿éš¾è€)";
                break;
        }
        
        // æ·»åŠ ä½“åŠ›çŠ¶æ€
        float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina * 100) : 0;
        if (currentState == EnemyState.Resting)
        {
            statusText += $" [ä¼‘æ¯ä¸­:{restTime - (Time.time - lastStateChangeTime):F1}s]";
        }
        else if (staminaPercentage <= 20)
        {
            statusText += $" [ä½“åŠ›ä¸è¶³:{staminaPercentage:F0}%]";
        }
        else if (currentState == EnemyState.Hunting || currentState == EnemyState.Fleeing)
        {
            // åœ¨å¥”è·‘çŠ¶æ€ä¸‹æ˜¾ç¤ºç´¯ç§¯å¥”è·‘æ—¶é—´å’Œä½“åŠ›
            statusText += $" [ä½“åŠ›:{staminaPercentage:F0}%]";
        }
        else 
        {
            statusText += $" [ä½“åŠ›:{staminaPercentage:F0}%]";
        }

        gameObject.name = $"æ•ŒäººLv{level} - {statusText}";
    }

    void HandleIdleState()
    {
        // æ£€æµ‹é™„è¿‘çš„ç©å®¶æˆ–å…¶ä»–æ•Œäºº
        Collider[] colliders = Physics.OverlapSphere(transform.position, visionRange);
        foreach (Collider col in colliders)
        {
            // å¦‚æœæ£€æµ‹åˆ°ç©å®¶
            if (col.CompareTag("Player"))
            {
                // è·å–ç©å®¶ç­‰çº§
                PlayerEvolution playerEvolution = col.GetComponent<PlayerEvolution>();
                if (playerEvolution != null)
                {
                    playerLevel = playerEvolution.level;
                }

                // æ ¹æ®ç­‰çº§å·®å¼‚å†³å®šè¡Œä¸º
                DetermineActionBasedOnLevel(col.transform, playerLevel);
                return;
            }

            // å¯¹å…¶ä»–æ•Œäººçš„å¤„ç†å¯ä»¥åœ¨æ­¤æ·»åŠ 
        }

        // å¦‚æœç©ºé—²å¤ªä¹…ï¼Œå¼€å§‹æ¸¸è¡
        if (Time.time - lastStateChangeTime > 3f)
        {
            TransitionToState(EnemyState.Wandering);
        }
    }

    void HandleWanderingState()
    {
        // æ£€æŸ¥æ˜¯å¦éœ€è¦è®¾ç½®æ–°çš„æ¸¸è¡ç›®æ ‡
        if (!IsAgentValid())
        {
            EnsureAgentOnNavMesh();
            return;
        }
        
        if (agent.remainingDistance < 0.5f || !agent.hasPath)
        {
            SetNewWanderDestination();
        }

        // æ£€æµ‹é™„è¿‘çš„ç©å®¶æˆ–å…¶ä»–æ•Œäºº
        Collider[] colliders = Physics.OverlapSphere(transform.position, visionRange);
        foreach (Collider col in colliders)
        {
            // å¦‚æœæ£€æµ‹åˆ°ç©å®¶
            if (col.CompareTag("Player"))
            {
                // è·å–ç©å®¶ç­‰çº§ä¿¡æ¯å¹¶å†³å®šè¡Œä¸º
                PlayerEvolution playerEvolution = col.GetComponent<PlayerEvolution>();
                if (playerEvolution != null)
                {
                    playerLevel = playerEvolution.level;
                }

                DetermineActionBasedOnLevel(col.transform, playerLevel);
                return;
            }

            // æ£€æµ‹å°¸ä½“
            DeadEnemy deadEnemy = col.GetComponent<DeadEnemy>();
            if (deadEnemy != null && IsHungry())
            {
                // å½“é¥¥é¥¿æ—¶ï¼Œå‘ç°å°¸ä½“ä¼šå»è¿›é£Ÿ
                currentEatingTarget = col.transform;
                TransitionToState(EnemyState.Hunting); // å…ˆè¿›å…¥è¿½å‡»çŠ¶æ€å»æ¥è¿‘å°¸ä½“
                Debug.Log($"ğŸ” æ•ŒäººLv{level}å‘ç°äº†å°¸ä½“ï¼Œå‰å»è¿›é£Ÿ");
                return;
            }

            // å…¶ä»–æ•Œäººçš„å¤„ç†ï¼ˆä»¥åå¯ä»¥æ‰©å±•ï¼‰
        }
    }

    void HandleAlertState()
    {
        // è­¦è§‰çŠ¶æ€ - åœæ­¢ç§»åŠ¨ï¼Œè§‚å¯Ÿå‘¨å›´
        if (IsAgentValid())
        {
            agent.isStopped = true;
        }

        // ç»§ç»­æ£€æµ‹ç›®æ ‡
        if (target != null)
        {
            // é¢å‘ç›®æ ‡
            Vector3 targetDirection = target.position - transform.position;
            targetDirection.y = 0;
            if (targetDirection != Vector3.zero)
            {
                transform.rotation = Quaternion.Slerp(
                    transform.rotation,
                    Quaternion.LookRotation(targetDirection),
                    Time.deltaTime * 5f
                );
            }

            // é‡æ–°è¯„ä¼°è¡Œä¸º
            if (target.CompareTag("Player"))
            {
                DetermineActionBasedOnLevel(target, playerLevel);
            }
        }

        // è­¦è§‰æ—¶é—´ç»“æŸåè¿”å›æ¸¸è¡
        if (Time.time - lastStateChangeTime > alertDuration)
        {
            TransitionToState(EnemyState.Wandering);
        }
    }

    void HandleHuntingState()
    {
        if (target == null && currentEatingTarget == null)
        {
            TransitionToState(EnemyState.Wandering);
            return;
        }

        // ç¡®ä¿ä»£ç†æœ‰æ•ˆ
        if (!IsAgentValid())
        {
            EnsureAgentOnNavMesh();
            return;
        }
        
        // æ ¹æ®ä½“åŠ›çŠ¶æ€è®¾ç½®é€Ÿåº¦
        agent.isStopped = false;
        
        // è®¡ç®—ä½“åŠ›ç™¾åˆ†æ¯”
        float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina) : 0;
        
        // æ ¹æ®ä½“åŠ›è®¾ç½®é€Ÿåº¦ - ç›´æ¥è®¾ç½®è€Œä¸æ˜¯æ£€æŸ¥æ¡ä»¶
        if (isResting || staminaPercentage < lowStaminaThreshold)
        {
            // ä½“åŠ›ä¸è¶³æˆ–ä¼‘æ¯ä¸­ï¼Œç›´æ¥è®¾ç½®ä¸ºæ­¥è¡Œé€Ÿåº¦
            agent.speed = walkSpeed;
            
            // æ¯120å¸§è¾“å‡ºä¸€æ¬¡æ—¥å¿—ï¼ˆå¤§çº¦2ç§’ï¼‰
            if (Time.frameCount % 120 == 0)
            {
                Debug.Log($"ğŸš¶ æ•ŒäººLv{level}è¿½å‡»ä¸­(ä½“åŠ›ä¸è¶³)ï¼šä½“åŠ›={currentStamina:F1}/{maxStamina}({staminaPercentage*100:F0}%)ï¼Œæ­¥è¡Œé€Ÿåº¦={walkSpeed:F1}");
            }
        }
        else if (staminaPercentage >= highStaminaThreshold)
        {
            // ä½“åŠ›å……è¶³ï¼Œç›´æ¥è®¾ç½®ä¸ºå¥”è·‘é€Ÿåº¦
            agent.speed = runSpeed;
            
            // æ¯120å¸§è¾“å‡ºä¸€æ¬¡æ—¥å¿—ï¼ˆå¤§çº¦2ç§’ï¼‰
            if (Time.frameCount % 120 == 0)
            {
                Debug.Log($"ğŸƒ æ•ŒäººLv{level}è¿½å‡»ä¸­(ä½“åŠ›å……è¶³)ï¼šä½“åŠ›={currentStamina:F1}/{maxStamina}({staminaPercentage*100:F0}%)ï¼Œå¥”è·‘é€Ÿåº¦={runSpeed:F1}");
            }
        }
        else
        {
            // ä½“åŠ›åœ¨ä¸­é—´çŠ¶æ€ï¼Œä¿æŒå½“å‰é€Ÿåº¦
            if (Time.frameCount % 120 == 0)
            {
                Debug.Log($"âš ï¸ æ•ŒäººLv{level}è¿½å‡»ä¸­(ä½“åŠ›ä¸­ç­‰)ï¼šä½“åŠ›={currentStamina:F1}/{maxStamina}({staminaPercentage*100:F0}%)ï¼Œå½“å‰é€Ÿåº¦={agent.speed:F1}");
            }
        }

        // å¦‚æœæ­£åœ¨è¿½å‡»å°¸ä½“
        if (currentEatingTarget != null)
        {
            // è¿½å‡»å°¸ä½“ç›®æ ‡
            agent.SetDestination(currentEatingTarget.position);

            // å¦‚æœæ¥è¿‘å°¸ä½“ï¼Œå¼€å§‹è¿›é£Ÿ
            float distanceToTarget = Vector3.Distance(transform.position, currentEatingTarget.position);
            if (distanceToTarget <= attackRange)
            {
                TransitionToState(EnemyState.Eating);
            }

            // å¦‚æœå°¸ä½“å¤ªè¿œæˆ–ä¸å­˜åœ¨äº†ï¼Œé‡æ–°è¿›å…¥æ¸¸è¡çŠ¶æ€
            if (distanceToTarget > visionRange * 1.5f || currentEatingTarget == null)
            {
                currentEatingTarget = null;
                TransitionToState(EnemyState.Wandering);
            }
            return;
        }

        // è¿½å‡»æ´»ä½“ç›®æ ‡çš„é€»è¾‘
        if (target != null)
        {
            // è¿½å‡»ç›®æ ‡
            agent.SetDestination(target.position);

            // å¦‚æœè¿›å…¥æ”»å‡»èŒƒå›´ï¼Œå¼€å§‹æ”»å‡»
            float distanceToTarget = Vector3.Distance(transform.position, target.position);
            if (distanceToTarget <= attackRange && canAttack)
            {
                TransitionToState(EnemyState.Attacking);
            }

            // å¦‚æœç›®æ ‡å·²é€ƒç¦»è§†é‡ï¼Œå›åˆ°è­¦è§‰çŠ¶æ€
            if (distanceToTarget > visionRange * 1.5f)
            {
                TransitionToState(EnemyState.Alert);
            }
        }
    }

    void HandleAttackingState()
    {
        if (target == null)
        {
            TransitionToState(EnemyState.Wandering);
            return;
        }

        // é¢å‘ç›®æ ‡
        Vector3 targetDirection = target.position - transform.position;
        targetDirection.y = 0;
        if (targetDirection != Vector3.zero)
        {
            transform.rotation = Quaternion.Slerp(
                transform.rotation,
                Quaternion.LookRotation(targetDirection),
                Time.deltaTime * 8f
            );
        }

        // å¦‚æœå¯ä»¥æ”»å‡»ï¼Œæ‰§è¡Œæ”»å‡»
        if (canAttack)
        {
            StartCoroutine(PerformAttack());
        }

        // å¦‚æœç›®æ ‡ç¦»å¼€æ”»å‡»èŒƒå›´ï¼Œå›åˆ°è¿½å‡»çŠ¶æ€
        float distanceToTarget = Vector3.Distance(transform.position, target.position);
        if (distanceToTarget > attackRange * 1.2f)
        {
            TransitionToState(EnemyState.Hunting);
        }
    }

    void HandleFleeingState()
    {
        if (target == null)
        {
            TransitionToState(EnemyState.Wandering);
            return;
        }

        if (!IsAgentValid())
        {
            EnsureAgentOnNavMesh();
            return;
        }
        
        // æ ¹æ®ä½“åŠ›çŠ¶æ€è®¾ç½®é€Ÿåº¦
        agent.isStopped = false;
        
        // è®¡ç®—ä½“åŠ›ç™¾åˆ†æ¯”
        float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina) : 0;
        
        // æ ¹æ®ä½“åŠ›è®¾ç½®é€Ÿåº¦ - ç›´æ¥è®¾ç½®è€Œä¸æ˜¯æ£€æŸ¥æ¡ä»¶
        if (isResting || staminaPercentage < lowStaminaThreshold)
        {
            // ä½“åŠ›ä¸è¶³æˆ–ä¼‘æ¯ä¸­ï¼Œä½¿ç”¨æ­¥è¡Œé€Ÿåº¦
            agent.speed = walkSpeed;
            
            // æ¯120å¸§è¾“å‡ºä¸€æ¬¡æ—¥å¿—ï¼ˆå¤§çº¦2ç§’ï¼‰
            if (Time.frameCount % 120 == 0)
            {
                Debug.Log($"ğŸš¶ æ•ŒäººLv{level}é€ƒè·‘ä¸­(ä½“åŠ›ä¸è¶³)ï¼šä½“åŠ›={currentStamina:F1}/{maxStamina}({staminaPercentage*100:F0}%)ï¼Œæ­¥è¡Œé€Ÿåº¦={walkSpeed:F1}");
            }
        }
        else if (staminaPercentage >= highStaminaThreshold)
        {
            // ä½“åŠ›å……è¶³ï¼Œç›´æ¥è®¾ç½®ä¸ºå¥”è·‘é€Ÿåº¦
            agent.speed = runSpeed;
            
            // æ¯120å¸§è¾“å‡ºä¸€æ¬¡æ—¥å¿—ï¼ˆå¤§çº¦2ç§’ï¼‰
            if (Time.frameCount % 120 == 0)
            {
                Debug.Log($"ğŸƒ æ•ŒäººLv{level}é€ƒè·‘ä¸­(ä½“åŠ›å……è¶³)ï¼šä½“åŠ›={currentStamina:F1}/{maxStamina}({staminaPercentage*100:F0}%)ï¼Œå¥”è·‘é€Ÿåº¦={runSpeed:F1}");
            }
        }
        else
        {
            // ä½“åŠ›åœ¨ä¸­é—´çŠ¶æ€ï¼Œä¿æŒå½“å‰é€Ÿåº¦
            if (Time.frameCount % 120 == 0)
            {
                Debug.Log($"âš ï¸ æ•ŒäººLv{level}é€ƒè·‘ä¸­(ä½“åŠ›ä¸­ç­‰)ï¼šä½“åŠ›={currentStamina:F1}/{maxStamina}({staminaPercentage*100:F0}%)ï¼Œå½“å‰é€Ÿåº¦={agent.speed:F1}");
            }
        }

        // è®¡ç®—é€ƒè·‘æ–¹å‘ - è¿œç¦»ç›®æ ‡
        Vector3 fleeDirection = (transform.position - target.position).normalized;
        Vector3 fleePosition = transform.position + fleeDirection * 15f;

        // å¯»æ‰¾æœ‰æ•ˆçš„é€ƒè·‘ä½ç½®
        NavMeshHit hit;
        if (NavMesh.SamplePosition(fleePosition, out hit, 10f, NavMesh.AllAreas))
        {
            agent.SetDestination(hit.position);
        }

        // æ£€æŸ¥æ˜¯å¦å·²ç»å®‰å…¨ï¼ˆç›®æ ‡è¿œç¦»è§†é‡ï¼‰
        float distanceToTarget = Vector3.Distance(transform.position, target.position);
        if (distanceToTarget > visionRange * 1.5f)
        {
            TransitionToState(EnemyState.Alert);
        }
    }

    void HandleEatingState()
    {
        // åœæ­¢ç§»åŠ¨ï¼Œæ’­æ”¾è¿›é£ŸåŠ¨ç”»/ç‰¹æ•ˆ
        if (IsAgentValid())
        {
            agent.isStopped = true;
        }

        // å¦‚æœæ˜¯åœ¨åƒå°¸ä½“
        if (currentEatingTarget != null)
        {
            DeadEnemy deadEnemy = currentEatingTarget.GetComponent<DeadEnemy>();
            if (deadEnemy != null)
            {
                // æ£€æŸ¥æ˜¯å¦è¿˜åœ¨å°¸ä½“é™„è¿‘
                if (Vector3.Distance(transform.position, currentEatingTarget.position) <= attackRange * 1.2f)
                {
                    // å¢åŠ é¥¥é¥¿å€¼ - åƒå°¸ä½“å›å¤æ›´å¤š
                    currentHunger = Mathf.Min(100f, currentHunger + 8f); // æ¯ç§’æ¢å¤8ç‚¹é¥¥é¥¿å€¼
                    
                    // é£Ÿç”¨æŒç»­ä¸€æ®µæ—¶é—´åæ¶ˆè´¹æ‰å°¸ä½“
                    if (Time.time - lastStateChangeTime > eatingDuration)
                    {
                        deadEnemy.EnemyConsumeDead(gameObject);
                        currentEatingTarget = null;
                        TransitionToState(EnemyState.Wandering);
                    }
                    return;
                }
                else
                {
                    // å¦‚æœå·²ç»ä¸åœ¨å°¸ä½“é™„è¿‘ï¼Œé‡æ–°è¿½è¸ª
                    TransitionToState(EnemyState.Hunting);
                    return;
                }
            }
            else
            {
                // å¦‚æœå°¸ä½“å·²ç»æ¶ˆå¤±
                currentEatingTarget = null;
            }
        }

        // å¸¸è§„è¿›é£Ÿé€»è¾‘ï¼ˆä¸æ˜¯åƒå°¸ä½“çš„æƒ…å†µï¼‰
        // å¢åŠ é¥¥é¥¿å€¼
        currentHunger = Mathf.Min(100f, currentHunger + 5f); // æ¯ç§’æ¢å¤5ç‚¹é¥¥é¥¿å€¼

        // è¿›é£Ÿç»“æŸåå›åˆ°æ¸¸è¡çŠ¶æ€
        if (Time.time - lastStateChangeTime > eatingDuration)
        {
            TransitionToState(EnemyState.Wandering);
        }
    }

    void HandleRestingState()
    {
        // ç¡®ä¿ä»¥æ­¥è¡Œé€Ÿåº¦ç§»åŠ¨
        if (IsAgentValid())
        {
            agent.isStopped = false;
            agent.speed = walkSpeed;
            
            // å¦‚æœåœ¨è¿½å‡»æˆ–é€ƒè·‘çŠ¶æ€ä¸‹è¿›å…¥ä¼‘æ¯ï¼Œä¿æŒåŸæœ‰ç›®æ ‡ä½†æ”¹ç”¨æ­¥è¡Œé€Ÿåº¦
            if (target != null && (currentState == EnemyState.Hunting || currentState == EnemyState.Fleeing))
            {
                agent.SetDestination(target.position);
            }
            else
            {
                // å¦‚æœä¸æ˜¯è¿½å‡»æˆ–é€ƒè·‘ï¼Œå°±åƒæ¸¸è¡çŠ¶æ€ä¸€æ ·éšæœºç§»åŠ¨
                if (agent.remainingDistance < 0.5f || !agent.hasPath)
                {
                    SetNewWanderDestination();
                }
            }
        }
        
        // åœ¨ä¼‘æ¯çŠ¶æ€ä¸‹ç¼“æ…¢æ¢å¤ä½“åŠ›
        currentStamina = Mathf.Min(maxStamina * 0.5f, currentStamina + Time.deltaTime * (maxStamina / restTime / 2));
        
        // æ¯éš”ä¸€æ®µæ—¶é—´è®°å½•ä¸€æ¬¡ä½“åŠ›æ¢å¤çŠ¶æ€
        if (Time.frameCount % 60 == 0)
        {
            float restTimeLeft = restTime - (Time.time - lastStateChangeTime);
            Debug.Log($"ğŸ˜´ æ•ŒäººLv{level}æ­£åœ¨ä¼‘æ¯ï¼Œä½“åŠ›æ¢å¤ä¸­: {currentStamina:F1}/{maxStamina}ï¼Œå‰©ä½™ä¼‘æ¯æ—¶é—´: {restTimeLeft:F1}ç§’");
        }
        
        // ä¼‘æ¯æ—¶é—´åˆ°ï¼Œæ¢å¤ä¸€éƒ¨åˆ†ä½“åŠ›åæ¢å¤æ­£å¸¸è¡Œä¸º
        if (Time.time - lastStateChangeTime >= restTime)
        {
            // ç¡®ä¿è‡³å°‘æ¢å¤åˆ°50%çš„ä½“åŠ›
            currentStamina = Mathf.Max(currentStamina, maxStamina * 0.5f);
            isResting = false;
            
            // è¿”å›åˆ°ä¹‹å‰çš„çŠ¶æ€ï¼Œä¿æŒåŸæœ‰è¡Œä¸ºä½†ç°åœ¨å¯ä»¥è·‘äº†
            if (target != null)
            {
                if (currentState == EnemyState.Hunting || currentState == EnemyState.Fleeing)
                {
                    // æ ¹æ®æ¢å¤çš„ä½“åŠ›å†³å®šæ˜¯å¦å¯ä»¥ç«‹å³å¥”è·‘
                    if (currentStamina >= maxStamina * 0.3f)
                    {
                        agent.speed = runSpeed;
                        Debug.Log($"ğŸ”‹ æ•ŒäººLv{level}ä¼‘æ¯å®Œæ¯•ï¼Œæ¢å¤å¥”è·‘");
                    }
                    else
                    {
                        // ä½“åŠ›ä»ç„¶ä¸è¶³ï¼Œç»§ç»­æ­¥è¡Œ
                        Debug.Log($"ğŸš¶ æ•ŒäººLv{level}ä¼‘æ¯å®Œæ¯•ï¼Œä½†ä½“åŠ›ä»ä¸è¶³ï¼Œç»§ç»­æ­¥è¡Œ");
                    }
                }
            }
            else
            {
                TransitionToState(EnemyState.Wandering);
            }
            
            Debug.Log($"ğŸ”‹ æ•ŒäººLv{level}ä¼‘æ¯å®Œæ¯•ï¼Œä½“åŠ›æ¢å¤è‡³{currentStamina:F1}/{maxStamina}");
        }
    }

    void DetermineActionBasedOnLevel(Transform newTarget, int targetLevel)
    {
        target = newTarget;
        int levelDifference = level - targetLevel;
        HungerStatus hungerStatus = GetHungerStatus();

        // è§„åˆ™1: é­é‡åˆ°çš„æ•Œäººç­‰çº§å°äºè‡ªèº«1çº§ä»¥ä¸Šï¼Œä¸ä¼šä¸»åŠ¨è¿½å‡»ï¼Œä½†å¦‚æœè·ç¦»å¾ˆè¿‘ï¼Œä¼šé¡ºä¾¿åƒæ‰
        if (levelDifference > 1)
        {
            float distanceToTarget = Vector3.Distance(transform.position, target.position);
            if (distanceToTarget <= attackRange * 1.5f)
            {
                TransitionToState(EnemyState.Attacking);
            }
            else
            {
                TransitionToState(EnemyState.Alert);
            }
        }
        // è§„åˆ™2: é­é‡åˆ°çš„æ•Œäººç­‰çº§å°äºè‡ªèº«1çº§ï¼Œä¼šä¸»åŠ¨çš„è¿½å‡»çŒç‰©
        else if (levelDifference == 1)
        {
            TransitionToState(EnemyState.Hunting);
        }
        // è§„åˆ™3: é­é‡åˆ°çš„æ•Œäººç­‰çº§ä¸è‡ªèº«ç›¸åŒï¼Œæ ¹æ®é¥¥é¥¿å€¼åˆ¤æ–­
        else if (levelDifference == 0)
        {
            if (hungerStatus == HungerStatus.Hungry || hungerStatus == HungerStatus.Starving)
            {
                TransitionToState(EnemyState.Hunting);
            }
            else
            {
                // ä¸é¥¥é¥¿æ—¶è¿œç¦»åŒçº§æ•Œäºº
                TransitionToState(EnemyState.Fleeing);
            }
        }
        // è§„åˆ™4: é­é‡åˆ°çš„æ•Œäººç­‰çº§é«˜äºè‡ªèº«ï¼Œé€‰æ‹©é€ƒè·‘
        else
        {
            TransitionToState(EnemyState.Fleeing);
        }
    }

    void SetNewWanderDestination()
    {
        if (!IsAgentValid())
        {
            EnsureAgentOnNavMesh();
            return;
        }
        
        // è·å–éšæœºæ–¹å‘
        Vector3 randomDirection = UnityEngine.Random.insideUnitSphere * wanderRadius;
        randomDirection += startPosition.position;
        
        // ä½¿ç”¨å°„çº¿æ£€æµ‹ç¡®ä¿ç›®æ ‡ç‚¹æ˜¯æœ‰æ•ˆçš„
        RaycastHit hit;
        if (Physics.Raycast(randomDirection + Vector3.up * 10f, Vector3.down, out hit, 20f))
        {
            // æ£€æŸ¥æ–œç‡æ˜¯å¦å¯è¡Œ
            float angle = Vector3.Angle(hit.normal, Vector3.up);
            if (angle <= 45f) // ä½¿ç”¨å›ºå®šå€¼45åº¦ä»£æ›¿agent.slopeLimit
            {
                randomDirection = hit.point;
            }
        }
        
        // ç¡®ä¿ç›®æ ‡ç‚¹åœ¨NavMeshä¸Š
        NavMeshHit navHit;
        if (NavMesh.SamplePosition(randomDirection, out navHit, wanderRadius, NavMesh.AllAreas))
        {
            wanderDestination = navHit.position;
            
            // æ£€æŸ¥è·¯å¾„æ˜¯å¦å¯è¾¾
            NavMeshPath path = new NavMeshPath();
            if (agent.CalculatePath(wanderDestination, path))
            {
                if (path.status == NavMeshPathStatus.PathComplete)
                {
                    agent.SetDestination(wanderDestination);
                }
                else
                {
                    // å¦‚æœè·¯å¾„ä¸å®Œæ•´ï¼Œå°è¯•æ‰¾åˆ°æ›´è¿‘çš„å¯è¾¾ç‚¹
                    Vector3 closestPoint = wanderDestination;
                    if (NavMesh.SamplePosition(transform.position + (wanderDestination - transform.position).normalized * 5f,
                        out navHit, 5f, NavMesh.AllAreas))
                    {
                        agent.SetDestination(navHit.position);
                    }
                }
            }
        }
        else
        {
            // å¦‚æœæ‰¾ä¸åˆ°æœ‰æ•ˆçš„å¯¼èˆªç‚¹ï¼Œå°è¯•åœ¨æ›´å°çš„èŒƒå›´å†…å¯»æ‰¾
            if (NavMesh.SamplePosition(transform.position + UnityEngine.Random.insideUnitSphere * 5f,
                out navHit, 5f, NavMesh.AllAreas))
            {
                agent.SetDestination(navHit.position);
            }
        }
    }

    void TransitionToState(EnemyState newState)
    {
        // å¦‚æœå½“å‰çŠ¶æ€å’Œæ–°çŠ¶æ€ç›¸åŒï¼Œä¸åšå¤„ç†
        if (currentState == newState) return;
        
        // è®¡ç®—ä½“åŠ›ç™¾åˆ†æ¯”
        float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina) : 0;
        
        // å¦‚æœå½“å‰åœ¨ä¼‘æ¯ä¸”ä½“åŠ›ä¸è¶³ï¼Œåªå…è®¸åˆ‡æ¢åˆ°æ¸¸è¡çŠ¶æ€æˆ–ä¿æŒä¼‘æ¯çŠ¶æ€
        if (isResting && staminaPercentage < highStaminaThreshold && 
            newState != EnemyState.Wandering && newState != EnemyState.Resting)
        {
            Debug.Log($"â›” æ•ŒäººLv{level}æ­£åœ¨ä¼‘æ¯ä¸”ä½“åŠ›ä¸è¶³({staminaPercentage*100:F0}%)ï¼Œæ— æ³•åˆ‡æ¢åˆ°{newState}çŠ¶æ€");
            return;
        }
        
        // å¦‚æœå‡†å¤‡åˆ‡æ¢åˆ°å¥”è·‘çŠ¶æ€ä½†ä½“åŠ›å·²è€—å°½
        if ((newState == EnemyState.Hunting || newState == EnemyState.Fleeing) && 
            staminaPercentage <= 0)
        {
            Debug.Log($"â›” æ•ŒäººLv{level}ä½“åŠ›è€—å°½ï¼Œæ— æ³•è¿›å…¥{newState}çŠ¶æ€");
            // å¼ºåˆ¶è¿›å…¥ä¼‘æ¯çŠ¶æ€
            newState = EnemyState.Resting;
            isResting = true;
        }
        
        // è®°å½•ä¸Šä¸€ä¸ªçŠ¶æ€
        EnemyState oldState = currentState;
        
        // é€€å‡ºå½“å‰çŠ¶æ€çš„é€»è¾‘
        switch (currentState)
        {
            case EnemyState.Attacking:
                // é‡ç½®æ”»å‡»ç›¸å…³å˜é‡
                break;

            case EnemyState.Hunting:
            case EnemyState.Fleeing:
                // ä»å¥”è·‘çŠ¶æ€é€€å‡º
                Debug.Log($"ğŸ”„ æ•ŒäººLv{level}é€€å‡ºå¥”è·‘çŠ¶æ€ï¼Œå½“å‰ä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
                break;
                
            case EnemyState.Resting:
                // å¦‚æœä½“åŠ›ä»ç„¶ä¸è¶³ï¼Œç¦æ­¢é€€å‡ºä¼‘æ¯çŠ¶æ€è¿›å…¥å¥”è·‘çŠ¶æ€
                if ((newState == EnemyState.Hunting || newState == EnemyState.Fleeing) && 
                    staminaPercentage < highStaminaThreshold)
                {
                    Debug.Log($"â›” æ•ŒäººLv{level}ä½“åŠ›ä¸è¶³({staminaPercentage*100:F0}%)ï¼Œæ— æ³•ä»ä¼‘æ¯çŠ¶æ€åˆ‡æ¢åˆ°{newState}");
                    return;
                }
                
                // å¦‚æœä»ä¼‘æ¯çŠ¶æ€åˆ‡æ¢å‡ºå»ï¼Œé‡ç½®ä¼‘æ¯çŠ¶æ€æ ‡å¿—
                isResting = false;
                Debug.Log($"â™»ï¸ æ•ŒäººLv{level}é€€å‡ºä¼‘æ¯çŠ¶æ€ï¼Œä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
                break;
        }

        // æ›´æ–°çŠ¶æ€
        currentState = newState;
        lastStateChangeTime = Time.time;

        // ç¡®ä¿ä»£ç†æœ‰æ•ˆ
        bool agentValid = IsAgentValid();

        // è¿›å…¥æ–°çŠ¶æ€çš„é€»è¾‘
        switch (newState)
        {
            case EnemyState.Idle:
                if (agentValid) agent.isStopped = true;
                break;

            case EnemyState.Wandering:
                if (agentValid)
                {
                    agent.isStopped = false;
                    agent.speed = walkSpeed;
                    SetNewWanderDestination();
                }
                break;

            case EnemyState.Alert:
                if (agentValid) agent.isStopped = true;
                break;

            case EnemyState.Hunting:
                if (agentValid)
                {
                    agent.isStopped = false;
                    // æ ¹æ®ä½“åŠ›çŠ¶æ€å†³å®šé€Ÿåº¦
                    if (isResting || staminaPercentage < lowStaminaThreshold)
                    {
                        agent.speed = walkSpeed;
                        Debug.Log($"âš ï¸ æ•ŒäººLv{level}ä½“åŠ›ä¸è¶³({staminaPercentage*100:F0}%)ï¼Œä»¥æ­¥è¡Œé€Ÿåº¦è¿›å…¥è¿½å‡»çŠ¶æ€");
                    }
                    else
                    {
                        agent.speed = runSpeed;
                        Debug.Log($"ğŸƒ æ•ŒäººLv{level}å¼€å§‹å¥”è·‘ (Hunting)ï¼Œä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
                    }
                    
                    if (target != null)
                    {
                        agent.SetDestination(target.position);
                    }
                }
                break;

            case EnemyState.Attacking:
                if (agentValid) agent.isStopped = true;
                break;

            case EnemyState.Fleeing:
                if (agentValid)
                {
                    agent.isStopped = false;
                    // æ ¹æ®ä½“åŠ›çŠ¶æ€å†³å®šé€Ÿåº¦
                    if (isResting || staminaPercentage < lowStaminaThreshold)
                    {
                        agent.speed = walkSpeed;
                        Debug.Log($"âš ï¸ æ•ŒäººLv{level}ä½“åŠ›ä¸è¶³({staminaPercentage*100:F0}%)ï¼Œä»¥æ­¥è¡Œé€Ÿåº¦è¿›å…¥é€ƒè·‘çŠ¶æ€");
                    }
                    else
                    {
                        agent.speed = runSpeed;
                        Debug.Log($"ğŸƒ æ•ŒäººLv{level}å¼€å§‹å¥”è·‘ (Fleeing)ï¼Œä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
                    }
                }
                break;

            case EnemyState.Eating:
                if (agentValid) agent.isStopped = true;
                break;
                
            case EnemyState.Resting:
                if (agentValid)
                {
                    agent.isStopped = false;
                    agent.speed = walkSpeed;
                }
                isResting = true;
                Debug.Log($"ğŸ˜´ æ•ŒäººLv{level}ä½“åŠ›ä¸è¶³({staminaPercentage*100:F0}%)ï¼Œè¿›å…¥ä¼‘æ¯çŠ¶æ€");
                break;
        }

        // æ›´æ–°æ˜¾ç¤ºåç§°
        UpdateNameWithStatus();

        Debug.Log($"ğŸ”„ æ•ŒäººLv{level} ä» {oldState} åˆ‡æ¢åˆ° {newState} çŠ¶æ€ï¼Œä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
    }

    // åœ¨EnemyAIExtended.csä¸­ä¿®æ”¹PerformAttackæ–¹æ³•
    IEnumerator PerformAttack()
    {
        canAttack = false;

        // æ‰§è¡Œæ”»å‡»åŠ¨ä½œï¼ˆå¯ä»¥æ·»åŠ åŠ¨ç”»è§¦å‘å™¨ï¼‰
        Debug.Log($"âš”ï¸ æ•ŒäººLv{level} å‘èµ·æ”»å‡»ï¼");

        // ä¼¤å®³ç›®æ ‡
        if (target != null && Vector3.Distance(transform.position, target.position) <= attackRange)
        {
            if (target.CompareTag("Player"))
            {
                // æ”»å‡»ç©å®¶
                PlayerHealth playerHealth = target.GetComponent<PlayerHealth>();
                if (playerHealth != null)
                {
                    playerHealth.TakeDamage(attackDamage);
                    Debug.Log($"ğŸ©¸ æ•ŒäººLv{level} å¯¹ç©å®¶é€ æˆ {attackDamage} ä¼¤å®³");

                    // æ£€æŸ¥æ˜¯å¦å·²æ€æ­»ç©å®¶
                    if (playerHealth.IsDead())
                    {
                        TransitionToState(EnemyState.Eating);
                    }
                    // å¦‚æœæ²¡æœ‰IsDeadæ–¹æ³•(å‘åå…¼å®¹)ï¼Œä¹Ÿå¯ä»¥è¿™æ ·æ£€æŸ¥
                    else if (playerHealth.GetHealthPercentage() <= 0)
                    {
                        TransitionToState(EnemyState.Eating);
                    }
                }
            }
            else
            {
                // æ”»å‡»å…¶ä»–æ•Œäºº
                EnemyHealth enemyHealth = target.GetComponent<EnemyHealth>();
                if (enemyHealth != null)
                {
                    // ç¡®ä¿é€ æˆä¼¤å®³å¹¶æ˜¾ç¤ºè¡€æ¡
                    enemyHealth.TakeDamage(attackDamage);
                    Debug.Log($"ğŸ©¸ æ•ŒäººLv{level} å¯¹å¦ä¸€ä¸ªæ•Œäººé€ æˆ {attackDamage} ä¼¤å®³");

                    // æ£€æŸ¥æ˜¯å¦å·²æ€æ­»æ•Œäºº
                    if (enemyHealth.IsDead())
                    {
                        TransitionToState(EnemyState.Eating);
                        Debug.Log($"ğŸ– æ•ŒäººLv{level} å‡»æ€äº†å¦ä¸€ä¸ªæ•Œäººï¼Œå¼€å§‹è¿›é£Ÿ");
                    }
                }
                else
                {
                    // å°è¯•åœ¨çˆ¶å¯¹è±¡æˆ–å­å¯¹è±¡ä¸­æŸ¥æ‰¾
                    enemyHealth = target.GetComponentInParent<EnemyHealth>();
                    if (enemyHealth == null)
                    {
                        enemyHealth = target.GetComponentInChildren<EnemyHealth>();
                    }

                    if (enemyHealth != null)
                    {
                        enemyHealth.TakeDamage(attackDamage);
                        Debug.Log($"ğŸ©¸ æ•ŒäººLv{level} å¯¹å¦ä¸€ä¸ªæ•Œäººé€ æˆ {attackDamage} ä¼¤å®³ (ç»„ä»¶åœ¨çˆ¶/å­å¯¹è±¡)");

                        if (enemyHealth.IsDead())
                        {
                            TransitionToState(EnemyState.Eating);
                        }
                    }
                }
            }
        }

        // æ”»å‡»å†·å´
        yield return new WaitForSeconds(attackCooldown);
        canAttack = true;
    }

    HungerStatus GetHungerStatus()
    {
        if (currentHunger > 75f)
            return HungerStatus.Satiated;
        else if (currentHunger > 50f)
            return HungerStatus.Normal;
        else if (currentHunger > 25f)
            return HungerStatus.Hungry;
        else
            return HungerStatus.Starving;
    }

    void OnDrawGizmosSelected()
    {
        if (showVisionRange)
        {
            // æ˜¾ç¤ºè§†é‡èŒƒå›´
            Gizmos.color = Color.yellow;
            Gizmos.DrawWireSphere(transform.position, visionRange);
        }

        if (showAttackRange)
        {
            // æ˜¾ç¤ºæ”»å‡»èŒƒå›´
            Gizmos.color = Color.red;
            Gizmos.DrawWireSphere(transform.position, attackRange);
        }

        // æ˜¾ç¤ºå½“å‰ç›®æ ‡
        if (target != null)
        {
            Gizmos.color = Color.blue;
            Gizmos.DrawLine(transform.position, target.position);
        }
    }

    // æ–°å¢ï¼šåˆ¤æ–­æ˜¯å¦é¥¥é¥¿çš„å·¥å…·æ–¹æ³•
    private bool IsHungry()
    {
        HungerStatus status = GetHungerStatus();
        return status == HungerStatus.Hungry || status == HungerStatus.Starving;
    }

    // æ–°å¢ï¼šç¢°æ’æ£€æµ‹åç¨‹
    IEnumerator ObstacleDetection()
    {
        while (true)
        {
            // æ£€æµ‹å‰æ–¹æ˜¯å¦æœ‰éšœç¢ç‰©
            Vector3 forward = transform.forward;
            RaycastHit hit;
            if (Physics.Raycast(transform.position + Vector3.up, forward, out hit, 2f))
            {
                // å¦‚æœæ£€æµ‹åˆ°éšœç¢ç‰©ä¸”å®ƒä¸æ˜¯å…¶ä»–æ•Œäººæˆ–ç©å®¶
                if (!hit.collider.CompareTag("Enemy") && !hit.collider.CompareTag("Player"))
                {
                    // è®¡ç®—çˆ¬å¡è§’åº¦
                    float angle = Vector3.Angle(hit.normal, Vector3.up);
                    
                    // å¦‚æœè§’åº¦å¤§äºå¯å¤„ç†çš„è§’åº¦ï¼Œè°ƒæ•´è·¯å¾„
                    const float maxAllowedSlope = 45f; // ä½¿ç”¨å›ºå®šå€¼45åº¦ä»£æ›¿agent.slopeLimit
                    if (angle > maxAllowedSlope)
                    {
                        // å°è¯•å¯»æ‰¾æ–°è·¯å¾„
                        Vector3 avoidDirection = Vector3.Cross(hit.normal, Vector3.up).normalized;
                        
                        // éšæœºé€‰æ‹©å·¦æˆ–å³é¿è®©
                        if (UnityEngine.Random.value > 0.5f) avoidDirection = -avoidDirection;
                        
                        // æ‰¾å¯»é¿è®©ç‚¹
                        Vector3 avoidPoint = transform.position + avoidDirection * 5f;
                        
                        NavMeshHit navHit;
                        if (NavMesh.SamplePosition(avoidPoint, out navHit, 5f, NavMesh.AllAreas))
                        {
                            // è®¾ç½®æ–°çš„è·¯å¾„ç‚¹
                            agent.SetDestination(navHit.position);
                            Debug.Log($"æ•Œäººæ£€æµ‹åˆ°ä¸å¯çˆ¬è¡Œçš„éšœç¢ç‰©ï¼Œé€‰æ‹©é¿è®©ã€‚è§’åº¦: {angle}");
                        }
                    }
                    else
                    {
                        // è§’åº¦å¯æ¥å—ï¼Œå¯ä»¥çˆ¬è¡Œ
                        Debug.Log($"æ•Œäººæ£€æµ‹åˆ°å¯çˆ¬è¡Œçš„å¡åº¦ã€‚è§’åº¦: {angle}");
                    }
                }
            }
            
            yield return new WaitForSeconds(0.5f);
        }
    }

    // æ–°å¢ï¼šè¢«å°¸ä½“è°ƒç”¨çš„æ–¹æ³•ï¼Œè¡¨ç¤ºå·²ç»æ¶ˆè´¹æ‰å°¸ä½“
    public void ConsumeDeadEnemy()
    {
        try
        {
            Debug.Log($"ConsumeDeadEnemy: æ•ŒäººLv{level}å¼€å§‹å¤„ç†å°¸ä½“æ¶ˆè´¹");
            
            // ç¡®ä¿æ¸¸æˆå¯¹è±¡å’Œç»„ä»¶éƒ½æœ‰æ•ˆ
            if (this == null || !gameObject.activeInHierarchy)
            {
                Debug.LogError("ConsumeDeadEnemy: æ•Œäººå¯¹è±¡æ— æ•ˆæˆ–æœªæ¿€æ´»");
                return;
            }
            
            // å¤§é‡æ¢å¤é¥¥é¥¿åº¦
            float oldHunger = currentHunger;
            currentHunger = Mathf.Min(100f, currentHunger + 30f);
            currentEatingTarget = null;
            
            Debug.Log($"ğŸ‘… æ•ŒäººLv{level}å®Œæˆè¿›é£Ÿï¼Œé¥¥é¥¿åº¦ä»{oldHunger:F1}æ¢å¤åˆ°{currentHunger:F1}");
            
            // è½¬å…¥æ¸¸è¡çŠ¶æ€
            TransitionToState(EnemyState.Wandering);
        }
        catch (System.Exception e)
        {
            Debug.LogError($"æ•Œäººé£Ÿç”¨å°¸ä½“å‡ºé”™: {e.Message}\n{e.StackTrace}");
        }
    }

    // æ ¹æ®ç­‰çº§è°ƒæ•´æ•Œäººå±æ€§
    private void AdjustStatsByLevel()
    {
        // åŸºç¡€å±æ€§æ ¹æ®ç­‰çº§è°ƒæ•´
        walkSpeed = 2f + (level - 1) * 0.2f;
        runSpeed = 5f + (level - 1) * 0.5f;
        visionRange = 10f + (level - 1) * 1f;
        attackRange = 2f + (level - 1) * 0.1f;
        attackDamage = 10 + (level - 1) * 5;
        
        // é«˜çº§æ•Œäººæ›´å¼ºå£®
        if (level >= 3)
        {
            attackCooldown = Mathf.Max(0.5f, attackCooldown - (level - 2) * 0.1f); // æ›´å¿«çš„æ”»å‡»é€Ÿåº¦
        }
        
        // è°ƒæ•´é¿éšœå‚æ•°
        if (agent != null)
        {
            agent.speed = walkSpeed;
            agent.stoppingDistance = attackRange * 0.8f;
        }
        
        // æ ¹æ®ç­‰çº§è®¾ç½®ç‰©ç†ç¢°æ’å‚æ•°
        collisionCheckRadius = 1.0f + (level - 1) * 0.2f;
        pushForce = 5.0f + (level - 1) * 1.0f;
        
        Debug.Log($"æ•ŒäººLv{level}å±æ€§å·²è°ƒæ•´ - èµ°é€Ÿ:{walkSpeed:F1} è·‘é€Ÿ:{runSpeed:F1} è§†é‡:{visionRange:F1} æ”»å‡»åŠ›:{attackDamage}");
    }

    // ç›‘æ§å¡ä½çŠ¶æ€çš„åç¨‹
    IEnumerator MonitorStuckStatus()
    {
        Vector3 lastRecordedPosition = transform.position;
        float stuckCheckTime = 2.0f;
        int stuckCounter = 0;
        
        while (true)
        {
            yield return new WaitForSeconds(stuckCheckTime);
            
            if (IsAgentValid() && !agent.isStopped && agent.hasPath)
            {
                // è®¡ç®—ç§»åŠ¨è·ç¦»
                float movedDistance = Vector3.Distance(transform.position, lastRecordedPosition);
                
                // å¦‚æœå‡ ä¹æ²¡æœ‰ç§»åŠ¨ä¸”æœ‰æœ‰æ•ˆè·¯å¾„ï¼Œå¯èƒ½å¡ä½äº†
                if (movedDistance < 0.1f)
                {
                    stuckCounter++;
                    
                    // è¿ç»­å¤šæ¬¡æ£€æµ‹åˆ°å¡ä½
                    if (stuckCounter >= 3)
                    {
                        Debug.Log($"æ•ŒäººLv{level}è¿ç»­{stuckCounter}æ¬¡æ£€æµ‹åˆ°æ— æ³•ç§»åŠ¨ï¼Œå°è¯•è§£é™¤å¡ä½çŠ¶æ€");
                        
                        // å°è¯•è§£é™¤å¡ä½
                        UnstuckAgent();
                        stuckCounter = 0;
                    }
                }
                else
                {
                    // å¦‚æœèƒ½æ­£å¸¸ç§»åŠ¨ï¼Œé‡ç½®è®¡æ•°å™¨
                    stuckCounter = 0;
                }
            }
            else
            {
                // æ•Œäººä¸åœ¨ä¸»åŠ¨ç§»åŠ¨ï¼Œé‡ç½®è®¡æ•°å™¨
                stuckCounter = 0;
            }
            
            // æ›´æ–°ä¸Šæ¬¡ä½ç½®
            lastRecordedPosition = transform.position;
        }
    }

    // ä½“åŠ›ç›‘æ§æ–¹æ³•
    private void MonitorStamina()
    {
        // å¢åŠ å¼ºåˆ¶è°ƒè¯•è¾“å‡º
        if (Time.frameCount % 300 == 0)
        {
            Debug.Log($"ğŸ” æ•ŒäººLv{level}ä½“åŠ›ç›‘æ§æ£€æŸ¥ï¼šå½“å‰ä½“åŠ›={currentStamina:F1}/{maxStamina} ({(currentStamina/maxStamina*100):F0}%)ï¼ŒçŠ¶æ€={currentState}ï¼Œé€Ÿåº¦={agent.speed:F1}ï¼Œå®é™…ç§»åŠ¨é€Ÿåº¦={agent.velocity.magnitude:F1}");
        }
        
        // åˆ¤æ–­å½“å‰çŠ¶æ€
        bool isRunningState = (currentState == EnemyState.Hunting || currentState == EnemyState.Fleeing);
        
        // è®¡ç®—ä½“åŠ›ç™¾åˆ†æ¯”
        float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina) : 0;
        
        if (isRunningState && !isResting)
        {
            // å¦‚æœåœ¨å¥”è·‘çŠ¶æ€ä¸”ä¸åœ¨ä¼‘æ¯ï¼Œæ¶ˆè€—ä½“åŠ›
            if (IsAgentValid() && agent.speed > walkSpeed * 1.2f)
            {
                // å®é™…é€Ÿåº¦æ¯”ä¾‹ï¼ˆè¶Šå¿«æ¶ˆè€—è¶Šå¤šï¼‰
                float speedRatio = Mathf.Clamp01(agent.velocity.magnitude / runSpeed);
                
                // åŸºäºé€Ÿåº¦çš„ä½“åŠ›æ¶ˆè€—
                float staminaDecrease = Time.deltaTime * staminaDecreaseRate * (0.5f + 0.5f * speedRatio);
                float oldStamina = currentStamina;
                currentStamina = Mathf.Max(0, currentStamina - staminaDecrease);
                
                // æ¯10å¸§è®°å½•ä¸€æ¬¡ä½“åŠ›æ¶ˆè€—ï¼ˆå¢åŠ é¢‘ç‡ï¼‰
                if (Time.frameCount % 10 == 0)
                {
                    Debug.Log($"ğŸƒ æ•ŒäººLv{level}å¥”è·‘ä¸­ï¼Œä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)ï¼Œæ¶ˆè€—: {oldStamina-currentStamina:F3}/å¸§ï¼Œé€Ÿåº¦æ¯”ä¾‹: {speedRatio:F2}");
                }
                
                // æ£€æŸ¥ä½“åŠ›æ˜¯å¦è€—å°½
                if (currentStamina <= 0)
                {
                    // ä½“åŠ›è€—å°½ï¼Œè¿›å…¥ä¼‘æ¯çŠ¶æ€
                    Debug.Log($"âš ï¸ æ•ŒäººLv{level}ä½“åŠ›å®Œå…¨è€—å°½ï¼å¼ºåˆ¶è¿›å…¥ä¼‘æ¯çŠ¶æ€");
                    EnterRestingState();
                }
                // æ£€æŸ¥ä½“åŠ›æ˜¯å¦ä½äºé˜ˆå€¼
                else if (staminaPercentage < lowStaminaThreshold)
                {
                    // ä½“åŠ›ä¸è¶³ï¼Œé™ä½é€Ÿåº¦
                    if (agent.speed > walkSpeed)
                    {
                        agent.speed = walkSpeed;
                        Debug.Log($"âš ï¸ æ•ŒäººLv{level}ä½“åŠ›ä¸è¶³({staminaPercentage*100:F0}%)ï¼Œé™ä½ä¸ºæ­¥è¡Œé€Ÿåº¦");
                    }
                }
            }
        }
        else
        {
            // ä¸åœ¨å¥”è·‘çŠ¶æ€æˆ–åœ¨ä¼‘æ¯çŠ¶æ€ï¼Œæ¢å¤ä½“åŠ›
            if (currentState == EnemyState.Resting || isResting)
            {
                // åœ¨ä¼‘æ¯çŠ¶æ€ä¸‹æ¢å¤ä½“åŠ›æ›´å¿«
                float recoveryMultiplier = 1.5f;
                float staminaRecovery = Time.deltaTime * staminaRecoveryRate * recoveryMultiplier;
                float oldStamina = currentStamina;
                currentStamina = Mathf.Min(maxStamina, currentStamina + staminaRecovery);
                
                // è®°å½•æ—¥å¿—ï¼ˆé™ä½é¢‘ç‡ï¼‰
                if (Time.frameCount % 60 == 0)
                {
                    float restTimeLeft = (lastStateChangeTime + restTime) - Time.time;
                    if (restTimeLeft > 0)
                    {
                        Debug.Log($"ğŸ˜´ æ•ŒäººLv{level}ä¼‘æ¯ä¸­ï¼Œä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)ï¼Œå‰©ä½™ä¼‘æ¯æ—¶é—´: {restTimeLeft:F1}ç§’");
                    }
                    else
                    {
                        Debug.Log($"ğŸ˜´ æ•ŒäººLv{level}ä¼‘æ¯æ¢å¤ä¸­ï¼Œä½“åŠ›: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
                    }
                }
                
                // æ£€æŸ¥æ˜¯å¦å·²ç»ä¼‘æ¯è¶³å¤Ÿé•¿çš„æ—¶é—´ä¸”ä½“åŠ›æ¢å¤åˆ°é˜ˆå€¼ä»¥ä¸Š
                if (isResting && Time.time - lastStateChangeTime >= restTime && staminaPercentage >= highStaminaThreshold)
                {
                    // æ¢å¤æ­£å¸¸çŠ¶æ€
                    ExitRestingState();
                }
            }
            else
            {
                // æ™®é€šçŠ¶æ€ä¸‹ç¼“æ…¢æ¢å¤ä½“åŠ›
                float staminaRecovery = Time.deltaTime * staminaRecoveryRate * 0.5f;
                float oldStamina = currentStamina;
                currentStamina = Mathf.Min(maxStamina, currentStamina + staminaRecovery);
                
                // è®°å½•æ—¥å¿—ï¼ˆé™ä½é¢‘ç‡ï¼Œåªåœ¨æœ‰æ˜æ˜¾æ¢å¤æ—¶ï¼‰
                if (Time.frameCount % 120 == 0 && currentStamina > oldStamina + 0.5f)
                {
                    Debug.Log($"ğŸ”„ æ•ŒäººLv{level}ä½“åŠ›æ¢å¤: {currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
                }
            }
        }
        
        // å¼ºåˆ¶æ‰§è¡Œä½“åŠ›é™åˆ¶ - å¦‚æœä½“åŠ›ä¸è¶³ï¼Œä¸å…è®¸å¥”è·‘
        EnforceStaminaRestrictions();
        
        // æ›´æ–°çŠ¶æ€æ˜¾ç¤º
        UpdateNameWithStatus();
    }
    
    // å¼ºåˆ¶æ‰§è¡Œä½“åŠ›é™åˆ¶
    private void EnforceStaminaRestrictions()
    {
        // è®¡ç®—ä½“åŠ›ç™¾åˆ†æ¯”
        float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina) : 0;
        
        if (IsAgentValid())
        {
            // å¦‚æœæ­£åœ¨ä¼‘æ¯æˆ–ä½“åŠ›ä½äºé˜ˆå€¼ï¼Œå¼ºåˆ¶ä½¿ç”¨æ­¥è¡Œé€Ÿåº¦
            if (isResting || staminaPercentage < lowStaminaThreshold)
            {
                // è·å–å½“å‰é€Ÿåº¦ä¸é¢„æœŸæ­¥è¡Œé€Ÿåº¦çš„å·®è·
                float speedDiff = agent.speed - walkSpeed;
                
                // å¦‚æœé€Ÿåº¦å¤§äºæ­¥è¡Œé€Ÿåº¦ï¼Œå¼ºåˆ¶å‡é€Ÿ
                if (speedDiff > 0.1f)
                {
                    // ä¹‹å‰çš„é€Ÿåº¦
                    float oldSpeed = agent.speed;
                    
                    // ç›´æ¥è®¾ç½®ä¸ºæ­¥è¡Œé€Ÿåº¦
                    agent.speed = walkSpeed;
                    
                    // è®°å½•æ—¥å¿—ï¼ˆé™åˆ¶é¢‘ç‡ï¼Œé¿å…æ—¥å¿—è¿‡å¤šï¼‰
                    Debug.Log($"âš ï¸ å¼ºåˆ¶å‡é€Ÿï¼æ•ŒäººLv{level}ä½“åŠ›ä¸è¶³({staminaPercentage*100:F0}%)ï¼Œé€Ÿåº¦ä»{oldSpeed:F1}é™è‡³{walkSpeed:F1}");
                }
            }
            // å¦‚æœä½“åŠ›å……è¶³ä¸”å¤„äºå¥”è·‘çŠ¶æ€ï¼Œç¡®ä¿ä½¿ç”¨å¥”è·‘é€Ÿåº¦
            else if (staminaPercentage >= highStaminaThreshold && 
                    (currentState == EnemyState.Hunting || currentState == EnemyState.Fleeing) && 
                    !isResting)
            {
                // è·å–å½“å‰é€Ÿåº¦ä¸é¢„æœŸå¥”è·‘é€Ÿåº¦çš„å·®è·
                float speedDiff = runSpeed - agent.speed;
                
                // å¦‚æœé€Ÿåº¦å°äºå¥”è·‘é€Ÿåº¦ï¼Œæ¢å¤å¥”è·‘
                if (speedDiff > 0.1f)
                {
                    // ä¹‹å‰çš„é€Ÿåº¦
                    float oldSpeed = agent.speed;
                    
                    // ç›´æ¥è®¾ç½®ä¸ºå¥”è·‘é€Ÿåº¦
                    agent.speed = runSpeed;
                    
                    // è®°å½•æ—¥å¿—
                    Debug.Log($"âš¡ æ¢å¤å¥”è·‘ï¼æ•ŒäººLv{level}ä½“åŠ›å……è¶³({staminaPercentage*100:F0}%)ï¼Œé€Ÿåº¦ä»{oldSpeed:F1}æå‡è‡³{runSpeed:F1}");
                }
            }
            
            // å¢åŠ ï¼šæ£€æŸ¥å®é™…é€Ÿåº¦æ˜¯å¦ä¸è®¾å®šé€Ÿåº¦åŒ¹é…
            if (Time.frameCount % 120 == 0)
            {
                float expectedSpeed = (isResting || staminaPercentage < lowStaminaThreshold) ? walkSpeed : 
                                    ((currentState == EnemyState.Hunting || currentState == EnemyState.Fleeing) && staminaPercentage >= highStaminaThreshold) ? runSpeed : agent.speed;
                
                float actualSpeed = agent.velocity.magnitude;
                float speedDifference = Mathf.Abs(expectedSpeed - actualSpeed);
                
                if (speedDifference > 0.5f && actualSpeed > 0.1f)
                {
                    Debug.Log($"âš ï¸ é€Ÿåº¦ä¸åŒ¹é…ï¼æ•ŒäººLv{level}çš„é¢„æœŸé€Ÿåº¦={expectedSpeed:F1}ï¼Œå®é™…é€Ÿåº¦={actualSpeed:F1}ï¼Œå·®è·={speedDifference:F1}");
                }
            }
        }
    }
    
    // è¿›å…¥ä¼‘æ¯çŠ¶æ€
    private void EnterRestingState()
    {
        currentStamina = 0;
        isResting = true;
        lastStateChangeTime = Time.time;
        
        // å¦‚æœä¸åœ¨ä¼‘æ¯çŠ¶æ€ï¼Œåˆ‡æ¢åˆ°ä¼‘æ¯çŠ¶æ€
        if (currentState != EnemyState.Resting)
        {
            Debug.Log($"ğŸ˜“ æ•ŒäººLv{level}ä½“åŠ›è€—å°½ï¼Œè¿›å…¥ä¼‘æ¯çŠ¶æ€");
            TransitionToState(EnemyState.Resting);
        }
        
        // ç¡®ä¿é€Ÿåº¦é™ä½
        if (IsAgentValid() && agent.speed > walkSpeed)
        {
            agent.speed = walkSpeed;
        }
    }
    
    // é€€å‡ºä¼‘æ¯çŠ¶æ€
    private void ExitRestingState()
    {
        isResting = false;
        
        // è®¡ç®—ä½“åŠ›ç™¾åˆ†æ¯”
        float staminaPercentage = (maxStamina > 0) ? (currentStamina / maxStamina) : 0;
        
        Debug.Log($"ğŸ”‹ æ•ŒäººLv{level}ä¼‘æ¯å®Œæ¯•ï¼Œä½“åŠ›æ¢å¤è‡³{currentStamina:F1}/{maxStamina} ({staminaPercentage*100:F0}%)");
        
        // å¦‚æœåœ¨ä¼‘æ¯çŠ¶æ€ï¼Œåˆ‡æ¢å›æ¸¸è¡çŠ¶æ€
        if (currentState == EnemyState.Resting)
        {
            TransitionToState(EnemyState.Wandering);
        }
        // å¦‚æœå½“å‰åœ¨è¿½å‡»æˆ–é€ƒè·‘çŠ¶æ€ï¼Œæ¢å¤å¥”è·‘é€Ÿåº¦
        else if ((currentState == EnemyState.Hunting || currentState == EnemyState.Fleeing) && 
                 staminaPercentage >= highStaminaThreshold)
        {
            if (IsAgentValid() && agent.speed < runSpeed)
            {
                agent.speed = runSpeed;
                Debug.Log($"âš¡ æ¢å¤å¥”è·‘ï¼æ•ŒäººLv{level}ä½“åŠ›å·²æ¢å¤ï¼Œæ¢å¤å¥”è·‘é€Ÿåº¦");
            }
        }
    }
}